{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1000x",
			"wideSize": "1400px"
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		},
		"color" : {
			"palette": [
				{
					"color": "#eee9e9",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#0e0e0e",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#111e2f",
					"name": "Primary",
					"slug": "primary"
				},
				
				{
					"color": "#faf9f6",
					"name": "Secondary",
					"slug": "secondary"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Poppins\", serif",
					"name": "Poppins",
					"slug": "poppins",
					"fontFace": 
					[
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src" : ["file:./assets/fonts/poppins-v20-latin-regular.woff2" ]
						},
						
						{
							"fontFamily": "Poppins",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src" : ["file:./assets/fonts/poppins-v20-latin-700.woff2" ]
						}

						
					]
				}
			]
		},

		"useRootPaddingAwareAlignments": true
	},

	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"styles": {
		"block" : {
			"core/post-excerpt": {
					
				"color" :  {

					"text" :"var(--wp--preset--color--contrast)"

				}
			
			},
			"core/heading" : {
				"color": {
					"text" : "red"
				},
				"typography" : {
					"fontWeight" : "Regular"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)",
			"link" : "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontFamily" : "Poppins",
			"fontWeight" : "Regular"
		},
		

		"elements" : {
			"button" : {
				"border" : {
					"radius": "15"
				},
				"color" : {
					"background" : "var(--wp--preset--color--contrast)",
					"text" : "var(--wp--preset--color--secondary)"
				}
			}
		}
	},
	"version": 2
}
